<Window x:Class="BookingApp.View.MakeReservationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Make Reservation" Height="200" Width="400">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <Label Content="Select Reservation Date:" />
            <DatePicker x:Name="ReservationDatePicker" Width="200" Margin="0,5" />
            <Button Content="Make Reservation" Click="MakeReservation_Click" Margin="0,10" Width="200" />
        </StackPanel>
    </Grid>
</Window>
